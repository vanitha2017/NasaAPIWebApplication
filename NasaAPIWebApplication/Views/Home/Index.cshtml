@model IEnumerable<NasaAPIWebApplication.Models.Images>
@{
    ViewData["Title"] = "Home Page";
}


@foreach (Images item in Model)
{
    <div class="row">
        <div class="col-md-12">
            <p>@item.date</p>
            @if (item.photos != null) { 
            foreach (Photo photo in item.photos)
            {
            <div class="gallery ">
                <a target="_blank" href="@photo.img_src" download>
                    <img src="@photo.img_src" alt="@photo.sol" class="imgcls">
                </a>
            </div>
            }
            }

        </div>
        </div>
        <hr />
}


    
<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: left;
        width: 180px;
    }

        div.gallery:hover {
            border: 1px solid #777;
        }

        div.gallery img {
            width: 100%;
            height: 200px;
        }

    div.desc {
        padding: 15px;
        text-align: center;
    }
    .imgcls {
        width :600px;
        height: 400px;
    }
</style>